{
   "arch": "x86_64",
   "hostname":"photon5",
   "password":{
      "crypted":false,
      "text":"Pssword1!"
   },
   "disk":"/dev/sda",
   "partitions":[
	   {"mountpoint": "/", "size": 0, "filesystem": "ext4"},
	   {"mountpoint": "/boot", "size": 128, "filesystem": "ext4"},
	   {"mountpoint": "/root", "size": 128, "filesystem": "ext4"},
	   {"size": 128, "filesystem": "swap"}   
   ],
   "bootmode":"efi",
   "linux_flavor":"linux",
   "packagelist_file":"packages_minimal.json",
   "postinstall":[
      "#!/bin/bash -x",
      "chage -I -1 -m 0 -M 99999 -E -1 root",
      "sed -i 's/PermitRootLogin no/PermitRootLogin yes/g' /etc/ssh/sshd_config",
      "sed -i 's/.*MaxAuthTries.*/MaxAuthTries 10/g' /etc/ssh/sshd_config",
	  "tdnf install -y hyper-v",
      "systemctl enable hv_fcopy_daemon",
      "systemctl enable hv_vss_daemon",
	  "systemctl enable hv_kvp_daemon",
	  "systemctl disable vmtoolsd",
  	  "tdnf remove -y open_vm_tools"
   ]
}